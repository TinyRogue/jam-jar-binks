            <a href="/mapview"><img class="bar_icon" src="/img/icons/street-map.png" alt=""> City</a>
            <a href="/prview"><img class="bar_icon" src="/img/icons/minimize.png" alt=""> Pull Requests</a>
            <a href="/imgview"><img class="bar_icon" src="/img/icons/photo.png" alt=""> Images</a>
            <a href="https://en.wikipedia.org/wiki/Initiative"><img class="bar_icon" src="/img/icons/open-book.png" alt=""> Wiki</a>
            <a href="#"><img class="bar_icon" src="/img/icons/email.png" alt=""> Insights</a>
        </div>
    </nav>

    <div class="idea-wrap">
        <div class="image-wrap">
            <img src="{{idea_image}}">
            <div class="notice">Click to enlarge</div>
        </div>
        <div class="middle-wrap">
            <div class="top-wrap">
                <div class="rating-wrap">
                    <div class="bar-wrap">
                        <div class="green" style="width: 70%;"></div>
                        <div class="red" style="width: 30%;"></div>
                    </div>
                    <div class="hand-wrap">
                        <img class="upvote" src="/images/upvote.png">
                        <img class="downvote" src="/images/downvote.png">
                    </div>
                </div>
                <div class="love-wrap">
                    <img src="/images/empty_heart.png">
                </div>
            </div>
            <div class="title">
                {{idea_title}}
            </div>
            <div class="desc">
                {{idea_desc}}
            </div>
            <div class="gravity">
                <div class="creator">
                    <img src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT" class="avatar">
                    <div class="name">
                        {{author_name}} {{author_surname}}
                    </div>
                </div>
                <div class="comments-wrap">
                    <div class="header">{{comments_count}} comments</div>
                    <button type="button" class="see-all">Expand</button>
                    <div class="comments">
                        {{#comments}}
                        <div class="comment">
                            <img src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT" class="avatar">
                            <div class="content">
                                {{.}}
                            </div>
                        </div>
                        {{/comments}}
                    </div>
                    <div class="comment-input-wrap">
                        <input type="text" id="comment-input" placeholder="Write your comment..." idea-id='{{idea_id}}'>
                    </div>
                </div>
            </div>
        </div>
        <div class="right-wrap">
            <div class="assignments-wrap">
                <div class="header">Assignments</div>
                <div class="ass-list">
                    <div class="ass">
                        <img class="small-avatar" src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT">
                        <div class="ass-name">Somebody once</div>
                    </div>
                    <div class="ass">
                        <img class="small-avatar" src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT">
                        <div class="ass-name">Told me</div>
                    </div>
                    <div class="ass">
                        <img class="small-avatar" src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT">
                        <div class="ass-name">The world</div>
                    </div>
                    <div class="ass">
                        <img class="small-avatar" src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT">
                        <div class="ass-name">Is gonna</div>
                    </div>
                    <div class="ass">
                        <img class="small-avatar" src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT">
                        <div class="ass-name">Roll me</div>
                    </div>
                </div>
            </div>
            <div class="labels-wrap">
                <div class="header">Labels</div>
                <div class="labels-list">
                    <div class="label">Food</div>
                    <div class="label">Culture</div>
                    <div class="label">Food</div>
                    <div class="label">Culture</div>
                    <div class="label">Food</div>
                    <div class="label">Culture</div>
                    <div class="label">Food</div>
                </div>
            </div>
            <div class="prs-wrap">
                <div class="header">
                    Linked Pull Reuqests
                    <button type="button" class="add-pr">Add</button>
                </div>
                <div class="ass-list">
                    {{#PRs}}
                    <div class="ass">
                        <img class="small-avatar" src="https://cdn.psychologytoday.com/sites/default/files/styles/article-inline-half-caption/public/field_blog_entry_images/2018-09/shutterstock_54503383.jpg?itok=5faDSSqT">
                        <div class="ass-name">
                            <a href="/pr/{{ideaID}}">{{title}}</a>
                        </div>
                    </div>
                    {{/PRs}}
                </div>
            </div>
            <div class="notifs-wrap">
                <div class="header">Notifications</div>
                <div class="notifs-wrapper">
                    <button class="sub">Subscribe</button>
                    <button class="unsub">Unsubscribe</button>
                </div>
            </div>
        </div>
    </div>

    <div class="add-pr-overlay">
        <div class="box">
            <div class="right-wrapperAAA-pr">
                <div class="x">&#10005;</div>
                <input type="text" class="pr-title" placeholder="Title...">
                <input type="text" class="pr-desc" placeholder="Description...">
                <button type="button" class="save-pr" idea-id="{{idea_id}}">Add Pull Request</button>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
        let hidden = true;
        let initialHeight = $('.comments-wrap').height() + 20;
        $('.see-all').on('click', () => {
            if (hidden) {
                $('.see-all').text('Hide')
                $('.comments-wrap').animate({
                    height: '580px'
                });
                $('.comments').css({
                    overflow: 'auto',
                    height: 'calc(100% - 50px)'
                });
                $('.comment-input-wrap').show(300);
            } else {
                $('.see-all').text('Expand')
                $('.comments-wrap').animate({
                    height: `${initialHeight}px`
                });
                $('.comments').css({
                    overflow: 'hidden',
                    height: '120px'
                }).scrollTop(0)
                $('.comment-input-wrap').hide(300);
            }
            hidden = !hidden;
        });

        $('#comment-input').on('keyup', function(e) {
            if (e.key !== 'Enter') return;
            const id = $(this).attr('idea-id');
            if (!id) return;
            const comment = this.value.trim();
            if (!this.value) return;
            this.value = '';
            $.post('/addIdeaComment', {
                comment,
                id
            }, function(res) {
                console.log(res);
                if (res.success) window.location.reload();
            })
        })

        $('.add-pr').on('click', () => {
            $('.add-pr-overlay').fadeIn(300);
        })

        $('.add-pr-overlay .x').on('click', () => {
            $('.add-pr-overlay').fadeOut(300);
        })

        $('.save-pr').on('click', () => {
            const title = $('.pr-title').val().trim();
            const desc = $('.pr-desc').val().trim();
            const id = $('.save-pr').attr('idea-id');
            if (!id) return;
            if (!title || !desc) {
                return alert('Fill in all forms!');
            }
            $.post('/addPr', {
                title,
                desc,
                id
            }, function(res) {
                if (!res.success) {
                    return alert(res.msg);
                }
                alert('Success!');
                window.location.reload();
            })
        });
    </script>

</body>

</html>