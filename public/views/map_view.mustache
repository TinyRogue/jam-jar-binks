    <div class="google-map" style="width: 100vw; height: calc(100vh - 90px); margin-top: 0px; padding: 0px;">

    </div>

    <script>
        let geocoder = null;
        let googleMap = document.querySelector('.google-map');
        let map = null;
        let marker = null;
        let loadedLocations = {};
        let address = 'Łódź';

        function initMap() {
            geocoder = new google.maps.Geocoder();
            map = new google.maps.Map(googleMap, {
                zoom: 13
            });
            marker = new google.maps.Marker({
                map: map,
            });
            google.maps.event.addListenerOnce(map, 'idle', codeAddress);

            marker.addListener("click", () => {
                const contentString =
                    '<div>' +
                    '<p>"Stuff about the localization"</p>' +
                    '<button class="button" onclick="openAddingOption()">"Add idea here"</button>' +
                    "</div>";
                const infowindow = new google.maps.InfoWindow({
                    content: contentString,
                });
                infowindow.open(map, marker);
            })
        }

        function codeAddress() {
            if (!loadedLocations[address]) {
                geocoder.geocode({
                    address: address
                }, function(results, status) {
                    if (status == google.maps.GeocoderStatus.OK) {
                        map.setCenter(results[0].geometry.location);
                        loadedLocations[address] = results[0].geometry.location;
                        marker.setPosition(loadedLocations[address]);
                    } else {
                        console.log("Nie udało się załadować miejsca na mapie, " + status);
                    }
                });
            } else {
                map.setCenter(loadedLocations[address]);
                marker.setPosition(loadedLocations[address]);
            }
        }

        function openAddingOption() {
            var addingPanel = document.createElement("div");
            addingPanel.className = "addingPanel";

            var localization = document.createElement("div");
            localization.className = "localization";
            localization.innerHTML = '<img src="img/icons/localization.png" alt="localizaation-icon" /> <p class="localization-info">TAKEN FROM MARKER SOMEHOW</p>';

            var title = document.createElement("div");
            title.className = "title";
            title.innerHTML = "Add title here...";

            var description = document.createElement("div");
            description.className = "description";
            description.innerHTML = "Add description here...";

            var coverImg = document.createElement("div");
            coverImg.className = "coverImg";
            coverImg.innerHTML = '<img src="img/icons/upload.png" alt="upload-button" />';

            var addBtn = document.createElement("div");
            addBtn.className = "addBtn";
            addBtn.innerHTML = '<img src="img/icons/add.png" alt="add-button" />';

            addingPanel.appendChild(localization);
            addingPanel.appendChild(title);
            addingPanel.appendChild(description);
            addingPanel.appendChild(coverImg);
            addingPanel.appendChild(addBtn);

            document.body.appendChild(addingPanel);
            console.log(marker);
        }
    </script>
    <script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDa4nN-bDVonpOyK5S7HAx23krp3ZBRLhE&callback=initMap' async defer></script>

